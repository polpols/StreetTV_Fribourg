
@world:#dad2c1;
@water:#52a8ca;
@road:#b5b5b5;
@buildings:#b96060;
@frontieres:#002172;



Map{background-color:@world;}
#World{background-color:@world;}



#water
{
  line-width:1;
  line-color:@water;
  polygon-fill:@water;
  polygon-clip:true;
}
#riversLines{
  line-width:4;
  line-color:@water;
  }
#lakes {
  line-color:#594;
  line-width:0.5;
  polygon-opacity:1;
  polygon-fill:#ae8;
}



